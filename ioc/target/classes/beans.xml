<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="phone3" class="com.soft1851.spring.ico.entity.Phone" p:price="8889.0" p:brand="iphone X"/>
    <bean id="phone4" class="com.soft1851.spring.ico.entity.Phone" p:price="4889.0" p:brand="iphone xr"/>
    <bean id="student" class="com.soft1851.spring.ico.entity.Phone">
        <property name="id" value="1802343315"/>
        <property name="name" value="Crihero"/>
        <property name="hobbies">
            <list>
                <value>game</value>
                <value>sport</value>
                <value>program</value>
            </list>
        </property>
        <property name="phones">
            <list>
                <ref bean="phone3"></ref>
                <ref bean="phone4"></ref>
            </list>
        </property>
    </bean>
</beans>